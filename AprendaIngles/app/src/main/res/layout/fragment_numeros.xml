<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/segundo_fundo"
    tools:context=".fragments.numeros.NumerosFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.085158154" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.92214113" />

    <ImageView
        android:id="@+id/btn_1"
        android:layout_width="@dimen/img_figuras_width"
        android:layout_height="@dimen/img_figuras_height"
        android:layout_marginTop="32dp"
        android:src="@drawable/um"
        app:layout_constraintEnd_toStartOf="@+id/btn_2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_2"
        android:layout_width="@dimen/img_figuras_width"
        android:layout_height="@dimen/img_figuras_height"
        android:layout_marginTop="32dp"
        android:src="@drawable/dois"
        app:layout_constraintEnd_toStartOf="@+id/guideline7"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_3"
        android:layout_width="@dimen/img_figuras_width"
        android:layout_height="@dimen/img_figuras_height"
        android:src="@drawable/tres"
        app:layout_constraintBottom_toTopOf="@+id/btn_5"
        app:layout_constraintEnd_toStartOf="@+id/btn_4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toBottomOf="@+id/btn_1" />

    <ImageView
        android:id="@+id/btn_4"
        android:layout_width="@dimen/img_figuras_width"
        android:layout_height="@dimen/img_figuras_height"
        android:src="@drawable/quatro"
        app:layout_constraintBottom_toTopOf="@+id/btn_6"
        app:layout_constraintEnd_toStartOf="@+id/guideline7"
        app:layout_constraintTop_toBottomOf="@+id/btn_2" />

    <ImageView
        android:id="@+id/btn_5"
        android:layout_width="@dimen/img_figuras_width"
        android:layout_height="@dimen/img_figuras_height"
        android:layout_marginBottom="32dp"
        android:src="@drawable/cinco"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_6"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline6" />

    <ImageView
        android:id="@+id/btn_6"
        android:layout_width="@dimen/img_figuras_width"
        android:layout_height="@dimen/img_figuras_height"
        android:layout_marginBottom="32dp"
        android:src="@drawable/seis"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline7" />
</androidx.constraintlayout.widget.ConstraintLayout>