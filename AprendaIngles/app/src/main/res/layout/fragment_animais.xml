<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundo_animais"
    tools:context=".fragments.animal.AnimaisFragment">

    <ImageView
        android:id="@+id/btn_cao"
        android:layout_width="@dimen/img_figuras_width"
        android:layout_height="@dimen/img_figuras_height"
        android:layout_marginTop="32dp"
        android:src="@drawable/cao"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_gato"
        android:layout_width="@dimen/img_figuras_width"
        android:layout_height="@dimen/img_figuras_height"
        android:layout_marginTop="32dp"
        android:src="@drawable/gato"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_leao"
        android:layout_width="@dimen/img_figuras_width"
        android:layout_height="@dimen/img_figuras_height"
        android:src="@drawable/leao"
        app:layout_constraintBottom_toTopOf="@+id/btn_vaca"
        app:layout_constraintEnd_toStartOf="@+id/btn_macaco"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/btn_cao"
        app:layout_constraintVertical_bias="0.502" />

    <ImageView
        android:id="@+id/btn_macaco"
        android:layout_width="@dimen/img_figuras_width"
        android:layout_height="@dimen/img_figuras_height"
        android:src="@drawable/macaco"
        app:layout_constraintBottom_toTopOf="@+id/btn_ovelha"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/btn_gato"
        app:layout_constraintVertical_bias="0.497" />

    <ImageView
        android:id="@+id/btn_vaca"
        android:layout_width="@dimen/img_figuras_width"
        android:layout_height="@dimen/img_figuras_height"
        android:layout_marginBottom="32dp"
        android:src="@drawable/vaca"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline3" />

    <ImageView
        android:id="@+id/btn_ovelha"
        android:layout_width="@dimen/img_figuras_width"
        android:layout_height="@dimen/img_figuras_height"
        android:layout_marginBottom="32dp"
        android:src="@drawable/ovelha"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.09" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />
</androidx.constraintlayout.widget.ConstraintLayout>